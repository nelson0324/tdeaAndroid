<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nelson.tda.imc.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lbIMC"
        android:textColor="#fffefe"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatura (m)"
        android:id="@+id/lblEstatura"
        android:layout_marginTop="29dp"
        android:textColor="#fffefe"
        android:textStyle="bold"
        android:layout_below="@+id/lbIMC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtEstatura"
        android:hint="Digite la estatura"
        android:layout_above="@+id/lblPeso"
        android:layout_alignLeft="@+id/txtPeso"
        android:layout_alignStart="@+id/txtPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso (kgs)"
        android:id="@+id/lblPeso"
        android:textColor="#fffefe"
        android:textStyle="bold"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/lblEstatura"
        android:layout_alignRight="@+id/lblEstatura"
        android:layout_alignEnd="@+id/lblEstatura" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtPeso"
        android:layout_alignTop="@+id/lblPeso"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
